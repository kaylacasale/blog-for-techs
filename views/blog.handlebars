<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{{get_emoji}}}</p>
    <p>{{content}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
    <p>
        <span for="img" aria-label="money">ðŸ’²</span>
        <span class="dollar-amount">{{user.username}}</span>
        Created by
    </p>

    <form class="form new-comment-form">
        <div class="form-group">
            <label for="comment">Comments:</label>
            {{!-- grab new comment input in a new comment or blog.js in public/js --}}
            <input class="form-input" type="text" id="comment" name="comment" />
        </div>
    </form>


    {{#if comments.length}}
    <div class="comment-list">
        <h3>Comments:</h3>

        {{#each comments as |comment|}}
        <div class="row mb-4">
            <h2>
                <a href="/comment/{{comment.id}}">{{comment.comment}}</a>
            </h2>
        </div>
        <button class="btn btn-primary" data-id="{{comment.id}}">Delete Comment</button>
    </div>
    <p>
        {{!-- <button class="btn btn-primary">Fund this Project!</button> --}}
    </p>
</div>